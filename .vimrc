"set nocompatible

" Show line numbers.
set number

" Searches wrap around the end of the file.
set wrapscan
" Ignore cases while searching.
set ignorecase

" Show incomplete commands.
set showcmd

" Show matching parenthesis.
set showmatch

" Incremental search.
set incsearch

" Don't generate backup files.
set nobackup

set tabstop=4

set nowrap


